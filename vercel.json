{
  "redirects": [
    { 
      "source": "/",
      "has": [
        {
          "type": "host",
          "value": "www.samsar.app"
        }
      ],
      "destination": "https://samsar.app/",
      "permanent": true
    },
    { 
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.samsar.app"
        }
      ],
      "destination": "https://samsar.app/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    { 
      "source": "/sitemap.xml",
      "destination": "/sitemap.xml"
    },
    { 
      "source": "/(.*)", 
      "destination": "/" 
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Link",
          "value": "<https://samsar.app/>; rel=\"canonical\""
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=3600, stale-while-revalidate=300"
        }
      ]
    }
  ]
}