# Cache headers for static assets
# Cloudflare and Netlify compatible

# Cache images for 1 month
/*.jpg
  Cache-Control: public, max-age=2592000, immutable
  CF-Cache-Status: HIT

/*.jpeg
  Cache-Control: public, max-age=2592000, immutable
  CF-Cache-Status: HIT

/*.png
  Cache-Control: public, max-age=2592000, immutable
  CF-Cache-Status: HIT

/*.webp
  Cache-Control: public, max-age=2592000, immutable
  CF-Cache-Status: HIT

/*.svg
  Cache-Control: public, max-age=2592000, immutable
  CF-Cache-Status: HIT

/*.ico
  Cache-Control: public, max-age=2592000, immutable
  CF-Cache-Status: HIT

/*.gif
  Cache-Control: public, max-age=2592000, immutable
  CF-Cache-Status: HIT

# Cache CSS/JS for 1 year (hashed filenames)
/*.css
  Cache-Control: public, max-age=31536000, immutable
  CF-Cache-Status: HIT

/*.js
  Cache-Control: public, max-age=31536000, immutable
  CF-Cache-Status: HIT

# Cache fonts for 1 year
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  CF-Cache-Status: HIT

/*.woff
  Cache-Control: public, max-age=31536000, immutable
  CF-Cache-Status: HIT

# HTML files - shorter cache
/*.html
  Cache-Control: public, max-age=3600
  CF-Cache-Status: HIT
